<div ng-controller="cformCtrl" ng-init="init()">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="/">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Custom Forms</span>
            </li>
        </ul>

    </div>
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">
        Custom Forms
        <small>Manage custom forms in UCCM</small>
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-6">
            <button class="btn blue" ng-click="createNew()">New</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-scrollable">
                <table class="table table-hover table-light">
                    <thead>
                        <tr>
                            <th style="width: 200px"> Id </th>
                            <th> Name </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th style="width: 180px"> Actions </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="cforms.length == 0">
                            <td colspan="5">There are no custom forms</td>
                        </tr>
                        <tr ng-repeat="form in cforms">
                            <td>{{form.Id}}</td>
                            <td><a href="/form/show?id={{form.Id}}">{{form.Name}}</a></td>
                            <td>{{form.Title}}</td>
                            <td>{{form.Description}}</td>
                            <td>
                                <button class="btn blue-madison btn-icon-only" ng-click="edit(form)"><i class="fa fa-edit"></i></button>
                                <button class="btn red-flamingo btn-icon-only" ng-click="delete(form)"><i class="fa fa-remove"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script type="text/ng-template" id="newFormModal.html">
        <div class="modal-header">
            <h3 class="modal-title">New Custom Form</h3>
        </div>
        <div class="modal-body form">
            <!-- BEGIN FORM-->
            <form name="objForm" class="form-horizontal">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Name</label>
                        <div class="col-md-8">
                            <input type="text" name="name" class="form-control" ng-model="cform.Name" required />
                            <span class="help-block" ng-show="cform.name.$dirty && cform.name.$error.required">
                                Form Name is required
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Title</label>
                        <div class="col-md-8">
                            <input type="text" name="title" class="form-control" ng-model="cform.Title" required />
                            <span class="help-block" ng-show="cform.title.$dirty && cform.title.$error.required">
                                Form Title is required
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Description</label>
                        <div class="col-md-8">
                            <input type="text" name="desc" class="form-control" ng-model="cform.Description" />
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Ok</button>
            <button class="btn btn-default" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>

</div>

@section js {
    <script src="~/app/components/custom-form/custom-form.list.js"></script>
}