.page-header.navbar.navbar-fixed-top, .page-header.navbar.navbar-static-top {
    z-index: 1000;
}

.form-edit-title-wrapper {
    display: inline-block;
    margin: 25px 0;
}
.form-edit-page-title {
    font-size: 24px;
    letter-spacing: -1px;
    padding: 0;
    font-weight: 300;
}
.place-holder-item {
    background: #fdfdfd;
    padding-bottom: 200px;
    border: 1px dashed black;
}

.toolbox {
    padding: 0;
    margin: 0;
    list-style: none;
}
.toolbox-item {
    padding: 10px 8px;    
    border: 1px solid #ddd;
    cursor: move;
    display: flex;
    align-items: center;
    margin: 5px;
    width: 120px;
    display: inline-block;
}
.toolbox-item .name {
    margin: 0 0 0 8px;
}
.toolbox-item i.icon {
    background-repeat: no-repeat;
    background-position: center center;
    display: inline-block;
    width: 14px;
    height: 14px;
}
.text-box {
    background-image: url('../images/text-box.png');
}
.text-area {
    background-image: url('../images/text-area.png');
}
.button {
    background-image: url('../images/button.png');
}
.dndPlaceholder {
    display: block;
    min-height: 48px;
    background: #add8e6;    
}

.row-container {
    min-height: 100px;
    border: 1px dotted darkblue;    
}
.control {
    position: relative;
    overflow: hidden;
}
.control .overlay{
    background: none;
}
.control.selected .overlay{
    background: cadetblue;
}
.control .overlay {
    opacity: 0.1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
}

input.prop-value {
    width: 100%;
    border: 1px solid #dddddd;
    padding: 2px 4px;    
}

.modal-lg {
    width: 1024px !important;    
}
.CodeMirror { height: 100%;}